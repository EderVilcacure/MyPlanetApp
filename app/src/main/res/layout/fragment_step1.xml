<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".create_event.FragmentPaso1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".create_event.FragmentPaso1">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Co-Host"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="533dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Campaña"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="425dp" />

        <Button
            android:id="@+id/btnAgregarCoHostPaso1"
            android:layout_width="85dp"
            android:layout_height="91dp"
            android:text="+"
            android:textSize="34sp"
            app:cornerRadius="200dp"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="504dp" />

        <Button
            android:id="@+id/btnAgregarCampaniaPaso1"
            android:layout_width="85dp"
            android:layout_height="91dp"
            android:text="+"
            android:textSize="34sp"
            app:cornerRadius="200dp"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="398dp" />

        <Button
            android:id="@+id/btnAgregarFotoPaso1"
            android:layout_width="85dp"
            android:layout_height="91dp"
            android:text="+"
            android:textSize="34sp"
            app:cornerRadius="200dp"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="293dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="358dp"
            android:layout_height="85dp"
            android:text='Use palabras cortas, comience con un verbo y enumere a quién se está ayudando. P.ej. "Cocinar para Mayores".'
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="127dp" />

        <EditText
            android:id="@+id/txtNombreEventoPaso1"
            android:layout_width="350dp"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nombre del Evento"
            android:textColor="@android:color/darker_gray"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="226dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 1"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Foto"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="327dp" />

        <Button
            android:id="@+id/btnSiguienteStep1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            tools:layout_editor_absoluteX="271dp"
            tools:layout_editor_absoluteY="593dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Crear un Evento"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>