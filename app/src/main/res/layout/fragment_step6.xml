<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".create_event.FragmentStep6">

    <TextView
        android:id="@+id/textView40"
        android:layout_width="361dp"
        android:layout_height="90dp"
        android:text="Cuéntele a sus voluntarios sobre su evento, a quién beneficia y qué harán exactamente cuando ayuden.   "
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="376dp" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paso 7: Acerca del evento"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="331dp" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="368dp"
        android:layout_height="87dp"
        android:text="Seleccione la cusa principal que admite este evento. Así es como se categorizará y filtrará para los voluntarios."
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paso 6: Causa"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear un Evento"
        android:textColor="@color/black"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnElegirCausaPaso6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:text="Elejir Causa(s)"
        android:textColorHighlight="@android:color/holo_blue_bright"
        android:textColorLink="@android:color/holo_blue_bright"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="259dp" />

    <EditText
        android:id="@+id/txtAcercaEventoPaso6"
        android:layout_width="358dp"
        android:layout_height="88dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="478dp" />

    <Button
        android:id="@+id/btnSiguienteStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="17dp"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescUbicacionPaso3" />
</androidx.constraintlayout.widget.ConstraintLayout>